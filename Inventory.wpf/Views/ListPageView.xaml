<UserControl x:Class="Inventory.wpf.Views.ListPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventory.wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="&#xf0a8;" Style="{StaticResource IconButtonPinkStyle}"/>
            <TextBlock Text="{Binding CurrentPageNumber}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <TextBlock Text=" / " FontSize="20" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding TotalNumberOfPages}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button Content="&#xf0a9;" Style="{StaticResource IconButtonPinkStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
